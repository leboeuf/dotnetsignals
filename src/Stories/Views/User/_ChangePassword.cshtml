@model Stories.Models.ViewModels.User.ChangePasswordViewModel
@{
    Layout = null;
}
<section>
    <div id="changepassword" data-url="@Url.Action("ChangePassword","User")">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="OldPassword" class="col-sm-2 control-label">Current Password</label>
                <div class="col-sm-3">
                    @Html.EditorFor(m => m.OldPassword, new { htmlAttributes = new { @type = "password", @class = "form-control password" } })
                </div>
            </div>
            <div class="form-group">
                <label for="NewPassword" class="col-sm-2 control-label">New Password</label>
                <div class="col-sm-3">
                    @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @type = "password", @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <label for="ConfirmNewPassword" class="col-sm-2 control-label">Confirm New Password</label>
                <div class="col-sm-3">
                    @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @type = "password", @class = "form-control" } })
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                <div id="updatepassword" class="col-sm-2 col-sm-offset-4 actions">
                    <button class="submit btn btn-default" type="submit">Update</button>
                </div>
            </div>
        </div>
    </div>
</section>
